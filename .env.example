# Database
DATABASE_URL="postgresql://user:password@localhost:5432/nurozh?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bunny CDN (optional - for file uploads)
BUNNY_CDN_STORAGE_ZONE=your-storage-zone
BUNNY_CDN_API_KEY=your-api-key
BUNNY_CDN_PULL_ZONE_URL=https://your-pullzone.b-cdn.net

# Logging
LOG_LEVEL=debug
